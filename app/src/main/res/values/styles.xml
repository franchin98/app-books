<resources>

    <style name="Theme.AppLibros.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.AppLibros.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Custom EditText Style -->
    <style name="EditTextStyle">
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Custom Button Style -->
    <style name="ButtonStyle">
        <item name="android:backgroundTint">@color/buttonBackground</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

</resources>